{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./src/types/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types"],
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "unpackage", "src/**/*.nvue"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
